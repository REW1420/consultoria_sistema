@model IEnumerable<consensoria_autos.Models.Message>
@{
    ViewData["Title"] = "Inbox - Messages";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">📥 Inbox</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-inbox"></i> No messages received yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Mensaje</th>
                        <th>Auto</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in Model)
                    {
                        <tr class="@(msg.is_read == true ? "" : "table-warning")">
                            <td>@msg.id</td>
                            <td>@msg.first_name @msg.last_name</td>
                            <td>@msg.email</td>
                            <td>@msg.phone</td>
                            <td class="text-truncate" style="max-width: 220px;">@msg.content</td>
                            <td>@(msg.cars != null ? msg.cars.model : "—")</td>
                            <td>@msg.received_at?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (msg.is_read == true)
                                {
                                    <span class="badge bg-success">Leído</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Nuevo</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <form asp-controller="Admin" asp-action="MarkAsRead" asp-route-id="@msg.id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as read">
                                            <i class="bi bi-check2"></i>
                                        </button>
                                    </form>
                                    <a asp-controller="Admin" asp-action="ViewMessage" asp-route-id="@msg.id"
                                       class="btn btn-sm btn-outline-primary" title="View details">
                                        <i class="bi bi-eye"></i>
                                    </a>


                                    <form asp-controller="Admin" asp-action="DeleteMessage" asp-route-id="@msg.id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Delete this message?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
