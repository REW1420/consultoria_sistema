@model consensoria_autos.Models.Car
@{
    ViewData["Title"] = "Contact Seller";
}

<!-- Hero -->
<section class="bg-secondary text-white text-center py-4 rounded-3 mb-5">
    <div class="container">
        <h1 class="fw-bold display-6 mb-3">Contact the Seller</h1>
        <p class="lead mb-0">Ask directly about this vehicle.</p>
    </div>
</section>

<!-- Car Information -->
<div class="container mb-5">
    <div class="card border-0 shadow-sm p-3">
        <div class="row align-items-center">
            <div class="col-md-4">
                <img src="@Model.image_url" alt="@Model.model" class="img-fluid rounded" />
            </div>
            <div class="col-md-8">
                <h4 class="fw-bold">@Model.model</h4>
                <p class="text-muted mb-1">@Model.description</p>
                <p class="mb-2">
                    <i class="bi bi-calendar"></i> Year: @Model.year<br />
                    <i class="bi bi-gear"></i> Transmission: @(Model.transmissions.type?? "N/A")<br />
                    <i class="bi bi-tag"></i> Price: <strong>$@Model.price.Value.ToString("N0")</strong><br />
                    <i class="bi bi-circle"></i> Condition: @(Model.car_conditions.label ?? "Used")
                </p>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.id" class="btn btn-outline-primary btn-sm">
                    View full details
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Contact Form -->
<section class="pb-5">
    <div class="container">
        <h4 class="fw-semibold mb-4">Send your information and we’ll reach out soon</h4>

        <div class="card shadow border-0 p-4">
            <div class="row g-0">
                <!-- Contact info -->
                <div class="col-md-4 bg-primary text-white p-4 rounded-start">
                    <h5 class="fw-bold mb-3">Contact Information</h5>
                    <ul class="list-unstyled mt-4">
                        <li class="mb-3"><i class="bi bi-telephone me-2"></i> +503 2222-3333</li>
                        <li class="mb-3"><i class="bi bi-envelope me-2"></i> sales@consensoriaautos.com</li>
                        <li><i class="bi bi-geo-alt me-2"></i> Av. Las Mercedes, Soyapango, San Salvador</li>
                    </ul>
                </div>

                <!-- Form -->
                <div class="col-md-8 bg-white p-4 rounded-end">
                    <form asp-controller="Home" asp-action="ContactSeller" asp-route-id="@Model.id" method="post">
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label fw-semibold">First Name</label>
                                <input name="first_name" type="text" class="form-control" placeholder="Your name" required />
                            </div>
                            <div class="col">
                                <label class="form-label fw-semibold">Last Name</label>
                                <input name="last_name" type="text" class="form-control" placeholder="Your last name" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label fw-semibold">Email</label>
                                <input name="email" type="email" class="form-control" placeholder="youremail@email.com" required />
                            </div>
                            <div class="col">
                                <label class="form-label fw-semibold">Phone</label>
                                <input name="phone" type="text" class="form-control" placeholder="(+503) 7000-0000" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea name="content" class="form-control" rows="4" placeholder="I'm interested in the @Model.model..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-2">Send Message</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
