@model IEnumerable<consensoria_autos.Models.Car>
@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero principal -->
<section class="bg-secondary text-white text-center py-5 rounded-3 mb-5">
    <div class="container">
        <h1 class="fw-bold display-5 mb-4">Simple, Directo y Eficaz</h1>

        <form asp-controller="Home" asp-action="Index" method="get" class="d-flex justify-content-center">
            <div class="input-group w-75" style="max-width: 600px;">
                <input type="text" name="search" class="form-control"
                       placeholder="Buscar por modelo..."
                       value="@ViewBag.Search" />
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.Search))
        {
            <p class="mt-3">Mostrando resultados para: <strong>@ViewBag.Search</strong></p>
        }
    </div>
</section>

<!-- Catálogo -->
@if (Model == null || !Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="bi bi-search fs-2"></i>
        <p class="mt-2">No se encontraron vehículos que coincidan con "<strong>@ViewBag.Search</strong>".</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-2">Ver todo el catálogo</a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var car in Model.Where(c => c.is_published == true))
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@car.image_url" class="card-img-top" alt="@car.model"
                         style="object-fit:cover; height:200px;" />

                    <div class="card-body">
                        <!-- Etiqueta de estado -->
                        @if (car.is_sold == true)
                        {
                            <span class="badge bg-danger mb-2">Vendido</span>
                        }
                        else
                        {
                            <span class="badge bg-success mb-2">Disponible</span>
                        }

                        <h5 class="card-title">@car.model</h5>
                        <p class="text-muted small">@car.description</p>

                        <div class="d-flex justify-content-between">
                            <small><i class="bi bi-calendar"></i> @car.year</small>
                            @if (car.transmissions != null)
                            {
                                <small><i class="bi bi-gear"></i> @car.transmissions?.type</small>
                            }
                        </div>
                    </div>

                    <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                        @if (car.price.HasValue)
                        {
                            <span class="fw-bold">$@car.price.Value.ToString("N0")</span>
                        }
                        else
                        {
                            <span class="fw-bold text-muted">Consultar</span>
                        }

                        <a asp-controller="Home" asp-action="Details" asp-route-id="@car.id"
                           class="text-primary text-decoration-none">
                            Ver más detalles <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
